<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FontAAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LaunchTheme" parent="Theme.FontAAndroid">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/translate</item>
        <!--        <item name="android:windowBackground">@drawable/splash_page</item>-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>